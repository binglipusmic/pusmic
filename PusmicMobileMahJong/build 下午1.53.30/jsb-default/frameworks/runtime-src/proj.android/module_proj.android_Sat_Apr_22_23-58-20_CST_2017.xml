<?xml version="1.0" encoding="UTF-8"?>
<project name="module_proj.android" default="compile.module.proj.android">
  <dirname property="module.proj.android.basedir" file="${ant.file.module_proj.android}"/>
  
  <property name="module.jdk.home.proj.android" value="${jdk.home.android_api_10_platform}"/>
  <property name="module.jdk.bin.proj.android" value="${jdk.bin.android_api_10_platform}"/>
  <property name="module.jdk.classpath.proj.android" value="jdk.classpath.android_api_10_platform"/>
  
  <property name="compiler.args.proj.android" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="proj.android.output.dir" value="${module.proj.android.basedir}/out/production/proj.android"/>
  <property name="proj.android.testoutput.dir" value="${module.proj.android.basedir}/out/test/proj.android"/>
  
  <path id="proj.android.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="proj.android.module.production.classpath">
    <path refid="${module.jdk.classpath.proj.android}"/>
    <pathelement location="${java.output.dir}"/>
    <path refid="library.wechat-sdk-android-with-mta-1.1.7.classpath"/>
  </path>
  
  <path id="proj.android.runtime.production.module.classpath">
    <pathelement location="${proj.android.output.dir}"/>
    <path refid="java.runtime.production.module.classpath"/>
    <path refid="library.wechat-sdk-android-with-mta-1.1.7.classpath"/>
  </path>
  
  <path id="proj.android.module.classpath">
    <path refid="${module.jdk.classpath.proj.android}"/>
    <pathelement location="${proj.android.output.dir}"/>
    <pathelement location="${java.testoutput.dir}"/>
    <pathelement location="${java.output.dir}"/>
    <path refid="library.wechat-sdk-android-with-mta-1.1.7.classpath"/>
  </path>
  
  <path id="proj.android.runtime.module.classpath">
    <pathelement location="${proj.android.testoutput.dir}"/>
    <pathelement location="${proj.android.output.dir}"/>
    <path refid="java.runtime.module.classpath"/>
    <path refid="library.wechat-sdk-android-with-mta-1.1.7.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.proj.android">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.proj.android">
    <patternset refid="excluded.from.module.proj.android"/>
  </patternset>
  
  <path id="proj.android.module.sourcepath">
    <dirset dir="${module.proj.android.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.proj.android" depends="compile.module.proj.android.production,compile.module.proj.android.tests" description="Compile module proj.android"/>
  
  <target name="compile.module.proj.android.production" depends="register.custom.compilers,compile.module.java" description="Compile module proj.android; production classes">
    <mkdir dir="${proj.android.output.dir}"/>
    <javac2 destdir="${proj.android.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.proj.android}/javac">
      <compilerarg line="${compiler.args.proj.android}"/>
      <bootclasspath refid="proj.android.module.bootclasspath"/>
      <classpath refid="proj.android.module.production.classpath"/>
      <src refid="proj.android.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.proj.android"/>
    </javac2>
    
    <copy todir="${proj.android.output.dir}">
      <fileset dir="${module.proj.android.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.proj.android.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.proj.android.tests" depends="register.custom.compilers,compile.module.proj.android.production" description="compile module proj.android; test classes" unless="skip.tests"/>
  
  <target name="clean.module.proj.android" description="cleanup module">
    <delete dir="${proj.android.output.dir}"/>
    <delete dir="${proj.android.testoutput.dir}"/>
  </target>
</project>